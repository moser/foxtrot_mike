%dl.flight
  %dt= Flight.l(:plane)
  %dd= @flight.plane
  %dt= Flight.l(:crew)
  %dd
    - unless @flight.seat1.nil?
      = @flight.seat1.person.to_s 
      = @flight.seat1.short
      %br
    - unless @flight.seat2.nil?
      = @flight.seat2.person.to_s 
      = @flight.seat2.short
  %dt= Flight.l(:from)
  %dd= @flight.from
  %dt= Flight.l(:to)
  %dd= @flight.to
  %dt= Flight.l(:departure)
  %dd= @flight.departure
  %dt= Flight.l(:arrival)
  %dd= @flight.arrival
  %dt= Flight.l(:duration)
  %dd= @flight.duration
  %dt Cost
  %dd
    - if !@flight.cost.nil? 
      - if !@flight.cost.cost.nil?
        = @flight.cost.cost[0].name
        = @flight.cost.cost_i
        %br
      - if !@flight.cost.launch_cost.nil?
        = @flight.cost.launch_cost.cost[0].name
        = @flight.cost.launch_cost.cost_i
      = @flight.cost.to_i
  %dt Versions
  - @flight.revisions.each do |r|
    %dd= r.updated_at.to_s + ' ' + r.changes.inspect

= link_to 'Reload', flight_path(@flight), :class => "replace_flight"
= link_to 'Edit', edit_flight_path(@flight), :class => "replace_flight"
= link_to 'Back', flights_path
