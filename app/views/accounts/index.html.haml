%h1= t '.title'
%table
  %tr
    %th= Account.l(:login)
    %th= Account.l(:person)
  - @accounts.each do |account|
    %tr
      %td=h account.login
      %td= show_link(account.person, account.person.name)
      %td= edit_link(account)
      %td= destroy_link(account)
      %td= link_to t("change_password"), new_account_password_path(account)
= new_link(Account)
