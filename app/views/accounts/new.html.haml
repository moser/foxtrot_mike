%h1 New account

= error_messages_for :account 

= form_for(@account) do |f|
  %p
    %b Login
    %br
    = f.text_field :login 
  %p
    %b Password
    %br
    = f.text_field :password 
  %p
    %b Password confirmation
    %br
    = f.text_field :password_confirmation 

  %p
    = f.submit "Create"
    
= link_to 'Back', accounts_path 
