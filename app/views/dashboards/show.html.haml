.boxes
  .account
    %h2 Benutzerkonto
    %ul
      -#%li Personendaten bearbeiten
      -# if current_account && current_account.person && current_account.person.financial_account
      %li= link_to t("own_financial_account"), own_financial_account_path
      %li= link_to t("change_password"), new_password_path
  - if Airfield.home.count > 0
    .views
      %h2 Ansichten
      %ul
        - Airfield.home.each do |a|
          %li= link_to t("views.main_flight_book", :name => a.to_s), airfield_main_log_book_path(a)
          %li= link_to t("views.controller_log", :name => a.to_s), airfield_main_log_book_path(a, :as => "controller_log")
  .bordbooks
    %h2= t('views.bordbooks')
    %ul
      - @planes.each do |p|
        %li= link_to p.registration, polymorphic_path([p, :flights])
  .flightbooks
    %h2= t('views.flightbooks')
    %ul
      %li= link_to "Alle", polymorphic_path([@current_person, :flights])
      - @licenses.each do |l|
        %li= link_to l.name, polymorphic_path([l, :flights])
  .groupbooks
    %h2= Group.l(:plural)
    %ul
      - @groups.each do |g|
        %li= link_to g.name, polymorphic_path([g, :flights])
.clear
