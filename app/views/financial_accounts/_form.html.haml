= simple_form_for(financial_account) do |f|
  = f.input :name
  = f.input :number
  = f.input :member_account
  = f.input :advance_payment
  = f.input :max_debit_value_f
  = f.input :bank_account_holder
  = f.input :bank_account_number
  = f.input :bank_code
  - if IBANTools::IBAN.valid?(financial_account.iban)
    = "IBAN valid"
  - else
    = "IBAN invalid!"
  = f.input :iban, hint: financial_account.kto_blz_to_iban
  = f.input :bic, hint: financial_account.blz_to_bic.join(' ')
  = f.input :mandate_id
  = f.input :mandate_date_of_signature
  = f.input :creditor_identifier
  = f.button :submit
