%table.data
  %tr
    %th= Plane.l(:registration)
    %td=h @plane.registration
  %tr
    %th= Plane.l(:make)
    %td=h @plane.make
  %tr
    %th= Plane.l(:group)
    %td= show_link(@plane.group, @plane.group.to_s)
  %tr
    %th= Plane.l(:legal_plane_class)
    %td= show_link(@plane.legal_plane_class, @plane.legal_plane_class.to_s)
  %tr
    %th= Plane.l(:financial_account)
    %td= show_link(@plane.financial_account, @plane.financial_account.to_s)
= render :partial => "common/memberships", :locals => { :object => @plane, :group => :plane_cost_category }
= show_link([@plane, :flights], Plane.l(:book))
= edit_link(@plane)
= back_link(Plane)
