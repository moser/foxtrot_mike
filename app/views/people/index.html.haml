%h1 Listing people

%table
  %tr
    %th Firstname
    %th Lastname
    %th Email
    %th Birthdate

  -for person in @people
    %tr
      %td=h person.firstname
      %td=h person.lastname
      %td=h person.email
      %td=h person.birthdate
  
      %td= link_to 'Show', person_path(person)
      %td= link_to 'Edit', edit_person_path(person)
      %td= link_to 'Destroy', person_path(person), :confirm => 'Are you sure?', :method => :delete, :confirm => "Are you sure?", :method => :delete
    
= link_to 'New person', new_person_path 