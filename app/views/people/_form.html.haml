= semantic_form_for(person) do |f|
  = f.inputs do
    = f.input :firstname
    = f.input :lastname
    = f.input :birthdate, :as => :date, :start_year => 1900, :end_year => Date.today.year
    = f.input :email
    = f.input :group, :as => :select, :prompt => true, :collection => Group.all.collect { |c| [ c.name, c.id ] }
  = f.buttons
