= simple_form_for(person) do |f|
  = f.input :firstname
  = f.input :lastname
  = f.input :birthdate, :as => :date, :start_year => 1900, :end_year => Date.today.year
  = f.input :email
  = f.association :group
  = f.input :financial_account_id, :collection => FinancialAccount.all.collect { |c| [ c.name, c.id ] } if person.new_record?
  = f.input :disabled unless person.new_record?
  = f.button :submit
