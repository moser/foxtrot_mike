%h1= t '.title'
%table
  %tr
    %th= Airfield.human_attribute_name(:registration)
    %th= Airfield.human_attribute_name(:name)
  - @airfields.each do |airfield|
    %tr
      %td=h airfield.registration
      %td=h airfield.name
      %td= link_to t('views.show'), airfield_path(airfield)
      %td= link_to t('views.edit'), edit_airfield_path(airfield)
      %td= link_to t('views.destroy'), airfield_path(airfield), :confirm => t('views.areusure'), :method => :delete
= link_to t('views.new'), new_airfield_path 
