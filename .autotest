require 'autotest/growl'
Autotest::Growl::clear_terminal = false

Autotest.add_hook :initialize do |at|
  at.add_mapping(%r%shared/app/models/(.*).rb$%) { |_, m|
    ["shared/spec/models/#{m[1]}_spec.rb", "spec/models/#{m[1]}_spec.rb"]
  }
  
  at.add_mapping(%r%^shared/spec/.*rb$%) { |filename, _|
    filename
  }

  # Ignore files in tmp/
  at.add_exception %r%^\./tmp%
  at.add_exception %r%rerun.txt$%
end


